{
  "compilerOptions": {
    "target": "es5",

    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "mocha"],
    "typeRoots": ["./node_modules/@types"],
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*", "src/app.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
